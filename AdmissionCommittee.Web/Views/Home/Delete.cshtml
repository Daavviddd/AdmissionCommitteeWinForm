@using AdmissionCommittee.Models
@model Student

@{
    ViewData["Title"] = "Удалить студента";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Подтверждение удаления</h4>
                </div>
                <div class="card-body">
                    <h5>Вы уверены, что хотите удалить студента?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">ФИО:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Пол:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Gender)
                            {
                                case Gender.Male:
                                            <span>Мужской</span>
                                    break;
                                case Gender.Female:
                                            <span>Женский</span>
                                    break;
                                default:
                                            <span>-</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4">Дата рождения:</dt>
                        <dd class="col-sm-8">@Model.BirthdayDisplay</dd>

                        <dt class="col-sm-4">Форма обучения:</dt>
                        <dd class="col-sm-8">
                            @{
                                var formText = Model.EducationalForm switch
                                {
                                    EducationalForm.FullTime => "Очная",
                                    EducationalForm.FullTimeAndPartTime => "Очно-заочная",
                                    EducationalForm.CorrespondenceEducation => "Заочная"
                                };
                            }
                            @formText
                        </dd>

                        <dt class="col-sm-4">Баллы:</dt>
                        <dd class="col-sm-8">
                            Математика: @Model.MathScores, 
                            Русский: @Model.PointsInRussianLanguage, 
                            Информатика: @Model.ComputerScienceScores
                        </dd>

                        <dt class="col-sm-4">Итого:</dt>
                        <dd class="col-sm-8">@Model.TotalAmountOfPoints</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>