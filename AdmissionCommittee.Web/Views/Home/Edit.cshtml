@using AdmissionCommittee.Models
@model Student
@{
    ViewData["Title"] = "Редактировать студента";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Редактировать студента</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Выберите пол</option>
                                    <option value="@Gender.Male">Мужской</option>
                                    <option value="@Gender.Female">Женский</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Birthday" class="form-label"></label>
                                <input asp-for="Birthday" class="form-control" type="date" />
                                <span asp-validation-for="Birthday" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EducationalForm" class="form-label"></label>
                                <select asp-for="EducationalForm" class="form-select">
                                    <option value="">Выберите форму обучения</option>
                                    <option value="@EducationalForm.FullTime">Очная</option>
                                    <option value="@EducationalForm.FullTimeAndPartTime">Очно-заочная</option>
                                    <option value="@EducationalForm.CorrespondenceEducation">Заочная</option>
                                </select>
                                <span asp-validation-for="EducationalForm" class="text-danger"></span>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label asp-for="MathScores" class="form-label"></label>
                                <input asp-for="MathScores" class="form-control" type="number" 
                                       min="@ValidationConstants.MinExamScore" 
                                       max="@ValidationConstants.MaxExamScore" 
                                       step="1" />
                                <span asp-validation-for="MathScores" class="text-danger"></span>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label asp-for="PointsInRussianLanguage" class="form-label"></label>
                                <input asp-for="PointsInRussianLanguage" class="form-control" type="number" 
                                       min="@ValidationConstants.MinExamScore" 
                                       max="@ValidationConstants.MaxExamScore" 
                                       step="1" />
                                <span asp-validation-for="PointsInRussianLanguage" class="text-danger"></span>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label asp-for="ComputerScienceScores" class="form-label"></label>
                                <input asp-for="ComputerScienceScores" class="form-control" type="number" 
                                       min="@ValidationConstants.MinExamScore" 
                                       max="@ValidationConstants.MaxExamScore" 
                                       step="1" />
                                <span asp-validation-for="ComputerScienceScores" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}